/* components/dialog/custom-acct-register.wxss */

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 88%;
  height: 15rem;
  overflow: hidden;
  position: fixed;
  top: 15rem;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -10rem 6% 0 6%;
  border-radius: 5px;
  border-color: #00cd66;
  border-style: outset;
}

.drawer_title {
  padding: 0.5rem;
  font-weight: 500;
  text-align: left;
  background-color: gazure;
}

.drawer_content {
  height: 12rem;
  overflow-y: scroll;
  /*超出父盒子高度可滚动*/
}

.title {
  height: 30px;
  line-height: 30px;
  width: 160rpx;
  text-align: center;
  display: inline-block;
  font: 300 28rpx/30px "microsoft yahei";
}

.text {
  color: black;
}

.sureQuery {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: white;
}

.btn {
  width: 100%;
  padding: 10px;
  text-align: center;
  color: red;
}

.btn:active {
  width: 100%;
  padding: 10px;
  text-align: center;
  color: red;
  background-color: gray;
}

.btnSure {
  width: 100%;
  padding: 10px;
  background-color: gainsboro;
  text-align: center;
}

.titleMsg {
  font: 200 35rpx/30px;
  text-align: center;
  margin-top: 45px;
  display: block;
}

.input_base {
  padding-top: 3px;
  padding-bottom: 3px;
  max-block-size: 10;
  display: block;
  background-color: white;
  margin-top: 45px;
  border: 2rpx solid #ccc;
  padding-left: 20rpx;
  margin-right: 10%;
  border-radius: 3px;
  margin-left: 10%;
}

.user {
  box-sizing: border-box;
  width: 60%;
  height: 25%;
  margin-left: 5%;
}

.user .user-span {
  display: block;
  position: relative;
  height: 70%;
  width: 95%;
  background-color: whitesmoke !important;
  margin: 0.5rem;
  border-style: solid;
  border-color: #00cd66;
  border-width: 1px;
}

.user .user-span image{
  height: 1.6rem;
  width: 1.6rem;
  position: relative;
  left:0.8rem;
}

.user .user-span input{
  position: relative;
  left:1.8rem;
  top: -1.8rem;
  width: 6.0rem;
  margin-left: 0.8rem;
  margin-top: 0.2rem;
}

.user-span button{
  position: relative;
  height: 2.5rem;
  width: 6.0rem;
  top:-3.8rem;
  left:10rem;
  font-size: 15px;
  margin-bottom: 0;
  margin-top: 0;
  padding-left: 0;
  padding-right: 0;
  padding-top: 4px;
  border-style: solid;
  border-width: 1px;
  border-color: #00cd66;
}

.user-span .span-button{
  display: inline-block;
  height: 2.5rem;
  width: 5.0rem;
  font-size: 16px;
  margin-left: 0.8rem;
  text-align: center;
  margin-bottom: 0rem;
  border:solid;
  border-color: white;
  border-width: 1px;
  padding-left: 4px;
  padding-right: 4px;
}
.span-button:active{
  border:solid;
  border-color: greenyellow;
}
