/*头像*/

.avator {
  display: inline-block;
  vertical-align: middle;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-left: 14rpx;
  margin-top: 14rpx;
  overflow: hidden;
}

.title-time {
  flex-direction: column;
  display: inline-block;
  margin-left: 14rpx;
  margin-top: 12rpx;
  vertical-align: middle;
  padding: 0;
  color: #454545;
}

/*标题*/

.title {
  display: block;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.time {
  display: block;
  font-size: 15rpx;
}

.morebtnnormal {
  width: 79rpx;
  height: 79rpx;
  float: right;
}

/*内容*/

.content {
  margin: 20rpx 14rpx;
}

.content-text {
  display: block;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-bottom: 14rpx;
  color: #333;
}

.content-multimedia {
  text-align: center;
  margin: 0 auto;
  overflow: hidden;
}

/*图片*/

.content-multimedia image {
  display: inline-block;
  max-width: 100%;
  height: auto;
}

/*视频*/

.content-multimedia video {
  display: inline-block;
  max-width: 100%;
  height: auto;
  min-width: 70%;
}

.content-multimedia audio {
  display: inline-block;
  width: 100%;
}

/**地址**/
.location {
  width: 100%;
  height: 1.8rem;
}

/**地址**/
.location text {
  color: #666699;
  margin-left: 1rem;
  font-size: 13px;
}

/*底部工具条*/

.bottom {
  height: 85rpx;
  border-top: 1rpx solid #f8f7f7;
  overflow: hidden;
}

.bottom-item {
  display: inline-block;
  width: 25%;
  height: 100%;
  vertical-align: text-bottom;
  text-align: center;
  overflow: hidden;
}

.bottom-item-content {
  display: inline-block;
  height: 100%;
  width: 100%;
  color: #909090;
}

.bottom-item-content image {
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-top: 22rpx;
}

.bottom-item-content text {
  font-size: 30rpx;
  vertical-align: middle;
  margin-top: 18rpx;
  display: inline-block;
  margin-left: 13rpx;
}

.cai image {
  margin-top: 5rpx;
}

/*分割线*/

.cut-line {
  display: inline-block;
  height: 80%;
  width: 2rpx;
  background-color: #dddcdc;
  position: relative;
  top: -2rem;
  left: 2.3rem;
}
