/**
* BODY
**/
.card__body {
  display: inline-block;
  height: 50%;
  width: 100%;
  -webkit-transition: height 0.5s;
  transition: height 0.5s;
}

.card__body .card__body_name {
  position: relative;
  top: -20px;
  left: 0;
  background-color: coral;
  color: #fff;
  text-transform: uppercase;
  font-size: 8px;
  line-height: 20rpx;
  width: 80rpx;
}

.card__body .card_body_title {
    line-height: 20rpx;
    text-align: center;
    position: relative;
    top: -22rpx;
}
.card_body_title label{
  font-size: 14px;
  color: #179349
}


.card__body .card_body_sub_title {
    line-height: 20rpx;
    text-align: center;
    position: relative;
}
.card_body_sub_title label{
  font-size: 16px;
  color: #0B4A24
}

