/* pages/primary/primary.wxss */

@import "../../othercss/topNav.wxss";
@import "../../othercss/normalize.min.wxss";
@import "../../components/custom/newsItem.wxss";

.pageRoot{
  padding-left: 10rpx;
  padding-right: 10rpx;
  overflow-x: hidden;
}

.tab-line{
  margin: 10rpx 

}


.pageBody {
  height: 100%;
  width: 100%;
}

.navigationScan {
  display: inline-block;
  height: 1.5rem;
  width: 1.5rem;
}

.navigationScan image {
  display: inline-block;
  margin: 1.8rem 0 0 0.5rem;
  height: 1.8rem;
  width: 1.8rem;
}

.navigationScan image:hover {
  display: inline-block;
  margin: 1.8rem 0 0 0.5rem;
  height: 2.0rem;
  width: 2.0rem;
}

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 2.5rem;
  line-height: 2.5rem;
  font-weight: 350;
  font-size: 0.75rem;
}

.swiper-tab-item {
  display: inline-block;
  width: 25%;
  color: black;
}

.active {
  color: #0e932e;
  border-bottom: 4rpx solid #0e932e;
}

/* 排行榜部分 */

.rankType {
  height: 5.5rem;
  margin: 0.8rem;
  border-radius: 10px;
}

.rankAnualColor {
  background-color: #cf9;
}

.rankQuarterColor {
  background-color: #fcf;
}

.rankParkColor {
  background-color: #9ff;
}

/* 下拉菜单部分 */

/*条件选择*/

.choice-bar {
  position: fixed;
  top: 0;
  display: flex;
  width: 100vw;
  font-size: 16px;
  background-color: #fff;
  z-index: 9;
}

.chioce-item {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  width: 33.33%;
  height: 80rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  border-left: 1rpx solid #ddd;
  /*border-right: 1rpx solid #ddd;*/
}

.chioce-item-last {
  border-right: none;
}

.chioce-item-first {
  border-left: none;
}

.icon-chioce {
  height: 30rpx;
  width: 30rpx;
}

.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: #000;
  opacity: 0.5;
}

.district-list, .sorting-list, .filter-list {
  margin-top: 2rpx;
  position: absolute;
  top: 80rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: -1;
  font-size: 14px;
  border-bottom: 1rpx solid #ddd;
}

.chioce-list-show {
  top: 80rpx;
  animation: slide 500ms;
}

@keyframes slide {
  0% {
    top: -500rpx;
  }

  100% {
    top: 80rpx;
  }
}

.chioce-list-hide {
  display: none !important;
}

/*区域位置*/

.district-list {
  display: flex;
}

.district-left {
  flex-grow: 1;
}

.district-right {
  flex-grow: 4;
}

.scroll-district {
  height: 500rpx;
}

.district-parent {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
  background-color: #f0f0f0;
}

.district-parent-active {
  background-color: #fff;
}

.district-children {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
}

/*综合排序*/

.sorting-item {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
}

/*筛选*/

.filter-item {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.icon-selected {
  height: 30rpx;
  width: 30rpx;
}

.filter-footer {
  display: flex;
  justify-content: space-between;
}

.filter-footer button {
  margin: 20rpx 80rpx;
  border-radius: 0 !important;
}

.button-reset {
  border: 1rpx solid #ddd !important;
  color: #666 !important;
}

/* 颜色渐变 */

.firstRank {
  height: 9.5rem;
  margin: 1.2rem;
  border-radius: 0.5rem;
}

.restRank {
  height: 2.5rem;
  margin: 0.5rem 1.2rem 0.5rem 1.2rem;
  border-radius: 0.5rem;
}

.restRank .rankingFont {
  color: #fafafa;
  letter-spacing: 0;
  text-shadow: 0px 1px 0px #999,
                 0px 2px 0px #888,
                 0px 3px 0px #777,
                 0px 4px 0px #666,
                 0px 5px 0px #555,
                 0px 6px 0px #444,
                 0px 7px 0px #333,
                 0px 8px 7px #001135;
}

.topRanking1 {
  display: inline-block;
  height: 4.5rem;
  width: 4.5rem;
  position: relative;
  margin: 0.5rem 0 0 0rem;
  border-radius: 50%;
  border: 1px #000;
  border-style: double double double double;
  border-color: white;
  border-width: 3px;
  overflow: hidden;
}

.topRanking1Icon {
  display: inline-block;
  height: 1.5rem;
  width: 1.5rem;
  margin: -2.5rem 0 0 1.5rem;
  border-radius: 50%;
  overflow: hidden;
}

.topRanking2 {
  display: inline-block;
  height: 3.5rem;
  width: 3.5rem;
  position: relative;
  margin: 2.5rem 0 0 0rem;
  border-radius: 50%;
  border: 1px #000;
  border-style: double double double double;
  border-color: white;
  border-width: 3px;
  overflow: hidden;
}

.topRanking2Icon {
  display: inline-block;
  height: 1.5rem;
  width: 1.5rem;
  margin: -2.5rem 0 0 1.1rem;
  border-radius: 50%;
  overflow: hidden;
}

.topRankingNameFont {
  font-size: 0.8rem;
  font-weight: 400;
}

.topRankingPointFont {
  font-size: 12;
  font-weight: 300;
}

.rankProfilephoto {
  display: inline-block;
  height: 2.0rem;
  width: 2.0rem;
  position: relative;
  margin: 0.3rem 0 0 0rem;
  border-radius: 50%;
  overflow: hidden;
}

.rankProfileName {
  display: inline-block;
  margin: 0 0 0 0.5rem;
  font-family: "黑体", "Dosis", sans-serif;
  text-transform: uppercase;
  color: #958ad6;
  font-size: 0.8rem;
}

.rankProfilePoints {
  font-family: "仿宋", "Dosis", sans-serif;
  color: #ff5e88;
  font-size: 1.2rem;
  font-weight: 400;
}

.gradient {
  filter: alpha(opacity=100 finishopacity=50 style=1 startx=0, starty=0, finishx=0, finishy=150) progid:DXImageTransform.Microsoft.gradient(startcolorstr=red, endcolorstr=blue, gradientType=0);
  -ms-filter: alpha(opacity=100 finishopacity=50 style=1 startx=0, starty=0, finishx=0, finishy=150) progid:DXImageTransform.Microsoft.gradient(startcolorstr=red, endcolorstr=blue, gradientType=0);
  background: red; /* 一些不支持背景渐变的浏览器 */
  background: -moz-linear-gradient(top, red, rgba(0, 0, 255, 0.5));
  background: -webkit-gradient(linear, 0 0, 0 bottom, from(#ff4c77), to(#fa5893));
}


.categoryPage {
  padding-left: 0.2rem;
  padding-right: 0.2rem;
  background-color: #bbb;
  min-height: 600px;
}

.categoryName {
  margin: 0.5rem 0 0.2rem 0;
  font-size: 18px;
  display: inline-block;
  width: 100%;
}

.nameBox {
  display: inline-block;
  padding: 0.2rem;
  border-top-right-radius: 18px;
  border-bottom-right-radius: 18px;
  background-image: -webkit-gradient(linear, left top, right top, from(#28834C), to(#8ADCAA));
  background-image: -webkit-linear-gradient(left, #28834C 0, #8ADCAA 100%);
  background-image: linear-gradient(90deg, #28834C 0, #8ADCAA 100%);
  box-shadow:5px 2px 6px #000;
}
.categoryName .firstName {
  margin: 0.5rem;
  color: white;
  font-style: oblique;
}
