.rankBoard {
    display: inline-block;
    width: 80%;
    text-align: center;
    /* -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%); */
    background: -webkit-linear-gradient(top, #3a404d, #181c26);
    background: linear-gradient(to bottom, #3a404d, #181c26);
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    box-shadow: 0 7px 30px rgba(62, 9, 11, 0.3);
}

.rankBoard .header {
    font-size: 18px;
    color: #e1e1e1;
    padding: 12px 13px 18px;
}

.rankBoard .header .svg {
    width: 25px;
    height: 26px;
    position: relative;
    top: 3px;
    margin-right: 6px;
    vertical-align: baseline;
}

.rankBoard ol {
    counter-reset: rankBoard;
}

.rankBoard ol .li {
    display: inline-block;
    width: 80%;
    position: relative;
    z-index: 1;
    font-size: 14px;
    counter-increment: rankBoard;
    padding: 18px 10px 18px 50px;
    cursor: pointer;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    -webkit-transform: translateZ(0) scale(1, 1);
    transform: translateZ(0) scale(1, 1);
}

.rankBoard ol .li::before {
    content: counter(rankBoard);
    position: absolute;
    z-index: 2;
    top: 15px;
    left: 15px;
    width: 20px;
    height: 20px;
    line-height: 20px;
    color: #c24448;
    background: #fff;
    border-radius: 20px;
    text-align: center;
}

.rankBoard ol .li .mark {
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    height: 100%;
    padding: 18px 10px 18px 50px;
    margin: 0;
    background: none;
    color: #fff;
}

.rankBoard ol .li .mark::before,
.rankBoard ol .li .mark::after {
    content: '';
    position: absolute;
    z-index: 1;
    bottom: -11px;
    left: -9px;
    border-top: 10px solid #c24448;
    border-left: 0 solid transparent;
    -webkit-transition: all .1s ease-in-out;
    transition: all .1s ease-in-out;
    opacity: 0;
}

.rankBoard ol .li .mark::after {
    left: auto;
    right: -9px;
    border-left: none;
    border-right: 0 solid transparent;
}

.rankBoard ol .li .small {
    position: relative;
    z-index: 2;
    display: block;
    text-align: right;
}

.rankBoard ol .li::after {
    content: '';
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #fa6855;
    box-shadow: 0 3px 0 rgba(0, 0, 0, 0.08);
    -webkit-transition: all .3s ease-in-out;
    transition: all .3s ease-in-out;
    opacity: 0;
}

.rankBoard ol .li {
    background: #e0574f;
}

.rankBoard ol .li::after {
    background: #e0574f;
    box-shadow: 0 2px 0 rgba(0, 0, 0, 0.08);
}

.rankBoard ol .li .mark::before,
.rankBoard ol .li .mark::after {
    border-top: 6px solid #ba4741;
    bottom: -7px;
}

.rankBoard ol .li:first-child {
    background: #fa6855;
}

.rankBoard ol .li:first-child::after {
    background: #fa6855;
}


