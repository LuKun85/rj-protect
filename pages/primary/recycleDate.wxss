}

.chooseSearchBoard{
    display: inline-block;
    width: 100%;
    margin: 0rpx 5rpx 5rpx 5rpx;
    position: relative;
    top: -35rpx;
    border-radius:15px;
    border-style: solid;
    border-width: thin;
    border-color: #F2F2F2;
    text-align: center;
    z-index: 10;
    background: -webkit-linear-gradient(top, #FAFAFA, #FAFAFA);
    background: linear-gradient(to bottom, #FAFAFA, #FAFAFA);

}

.chooseSearchBoard .scroll-view{
    text-align: left ;
    height: 500rpx
}

.scroll-view li{
  display: inline-block;
  width: 100%;
  font-size: 15px;
  margin: 0.1rpx 5rpx 0.1rpx 5rpx;
  color: #c24448;
  background: #fff;
  text-align: left;
  -webkit-backface-visibility: hidden;
          backface-visibility: hidden;
  -webkit-transform: translateZ(0) scale(1, 1);
          transform: translateZ(0) scale(1, 1);
/*    box-shadow: 0 3px 0 rgba(0, 0, 0, 0.08); */

}

.scroll-view li::after{
  -webkit-transition: all .3s ease-in-out;
  transition: all .3s ease-in-out;
  opacity: 0;
}
li:first-child {
  background: #fa6855;
}

.scroll-view li:hover {
  z-index: 2;
  overflow: visible;
}
.scroll-view li:hover::after {
  opacity: 1;
  -webkit-transform: scaleX(1.06) scaleY(1.03);
          transform: scaleX(1.06) scaleY(1.03);
}






