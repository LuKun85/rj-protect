.searchBoard{
	  line-height: 100rpx;
    z-index: 10;
    margin-top: 10rpx;
    text-align: center;
}

.searchBoard:active{
  z-index: 1000;
}


.searchBoard:active  .maskpage{
  opacity: 0.1;
  z-index: 999;
}



.searchBox{
    background: -webkit-linear-gradient(top, #3a404d, #181c26);
  background: linear-gradient(to bottom, #3a404d, #181c26);
	 display: inline-block;
	 border-radius: 50px;
	 height: 100rpx;
   width: 80%;
}


.searchInput{
	  display: inline-block;
    height: 100rpx;
    position: relative;
    left: 50rpx;
    margin-top: auto;
    margin-bottom: auto;
    width: 80%;
    background: transparent;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    border:none;
    outline:none;
    font-family:"Open Sans", Arial, Verdana;
    font-size: 16px;
    font-weight: 400;
    line-height: 20px;
    color:#FFF;
    text-align: left;
}

.searchInput::after{
	text-align: right;
}

.searchIcon{
	  display: inline-block;
	  width: 100rpx;
    height: 100rpx;
    border:none;
    border-radius:50%;
    background: #FFF;
    padding:0px;
    outline:none;
    z-index: 2;
    cursor: pointer;
}

.searchIcon span{
    font-size: 12px;
    width: 80rpx;
    height:80rpx;
    display: inline-block;
    vertical-align: middle;
    position:relative;
/*     -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    transform: rotate(45deg); */
    -webkit-transition: all 1s cubic-bezier(0.650, -0.600, 0.240, 1.650);
    -moz-transition: all 1s cubic-bezier(0.650, -0.600, 0.240, 1.650);
    transition: all 1s cubic-bezier(0.650, -0.600, 0.240, 1.650);
}

.searchIcon:hover{
    width: 100rpx;
    height: 100rpx;
    -webkit-animation: route360 2s linear infinite;
    animation: route360 2s linear infinite;

/*     -webkit-transform: rotate(-180deg);
    -moz-transform: rotate(-180deg);
    transform: rotate(-180deg); */
}


@keyframes route360 {
        0%   {
            -webkit-transform: rotate(0deg);
            -ms-transform: rotate(0deg);
            transform: rotate(0deg);
        }
        25%   {
            -webkit-transform: rotate(90deg);
            -ms-transform: rotate(90deg);
            transform: rotate(90deg);
        }
        50%   {
            -webkit-transform: rotate(180deg);
            -ms-transform: rotate(180deg);
            transform: rotate(180deg);
        }
        75%   {
            -webkit-transform: rotate(270deg);
            -ms-transform: rotate(270deg);
            transform: rotate(270deg);
        }
        100% {
            -webkit-transform: rotate(360deg);
            -ms-transform: rotate(360deg);
            transform: rotate(360deg);
        }
    }



