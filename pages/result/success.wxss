/* pages/result/success.wxss */

.success {
    display: block;
    width: 6rem;
    height: 6rem;
    margin-left: auto;
    margin-right: auto;
    padding: 0.2rem;
    border-radius: 50%;
    background-image: -webkit-gradient(linear, left top, right top, from(#28834C), to(#8ADCAA));
    background-image: -webkit-linear-gradient(left, #28834C 0, #8ADCAA 100%);
    background-image: linear-gradient(90deg, #28834C 0, #8ADCAA 100%);
    box-shadow: 0px 0px 20px #000;
    -webkit-animation: route360 2s linear infinite;
    animation: scale1 1.5s linear;
}

@keyframes scale1 {
    0% {
        /* -webkit-transform: scale(1.5);
        -ms-transform: scale(1.5);
        transform: scale(1.5); */
        -webkit-transform: translateX(10px, 20px);
        -ms-transform: translateX(10px, 20px);
        transform: translateX(10px, 20px);
    }
    25% {
        -webkit-transform: scale(1.2);
        -ms-transform: scale(1.2);
        transform: scale(1.2);
    }
    100% {
        -webkit-transform: scale(1.0);
        -ms-transform: scale(1.0);
        transform: scale(1.0);
    }
}

.message {
