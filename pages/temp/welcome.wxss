/* top right bottom left */

@keyframes clipMe {
   0%, 100% {
    clip: rect(0px, 420.0px, 2px, 0px);
  }

  25% {
    clip: rect(0px, 2px, 440.0px, 0px);
  }

  50% {
    clip: rect(218.0px, 220.0px, 220.0px, 0px);
  }

  75% {
    clip: rect(0px, 220.0px, 220.0px, 218.0px);
  }
}
