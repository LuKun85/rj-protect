/* pages/login/signup.wxss */

.loginPageTopImg {
  height: 8rem;
  width: 98%;
  margin: 0.2rem;
  border-radius: 4px;
  overflow: hidden;
}

.weui-label_d{
  width: 60px;
}

.verifyCodeSpan {
  width: 6rem;
  text-align: center;
  margin: 0.1rem 0.3rem 0.1rem 0.3rem;
}

.verifyCodeBox{
  width: 100%;
  text-align: center;
  padding: 0 0 0 0;
  margin-top: 0;
  margin-bottom: 0;
  border:0;
  backGround-color:#FFFFFF;
  border-style:none;
}

.verifyCodeBoxClicked{
   border-color: #00CD66
}

.signUpSwitchButton {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  font-size: 18px;
}

.signUpButtonIcon {
  display: inline-block;
  width: 1.2rem;
  height: 1.2rem;
  position: relative;
  top:0.3rem;
  right:1rem;
}


.returnPrimaryPage{
  text-align: center;
  line-height: 50rpx;
}

.returnPrimaryPage label{
  font-size: 12px;
  color:  #ACACDC;
}


.returnPrimaryPage label:active, .returnPrimaryPage label:hover{
  text-decoration: underline;
  color: 151530;
}


.returnPrimaryPage label:after{
  content: '';
  border-bottom-style: solid;
  border-bottom-width: thin;
  border-bottom-color: #151530;
}

