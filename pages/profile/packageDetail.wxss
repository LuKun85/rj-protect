.detailContent ol li:hover {
  overflow: visible;
}
.detailContentol li:hover::after {
  opacity: 1;
  -webkit-transform: scaleX(1.06) scaleY(1.03);
          transform: scaleX(1.06) scaleY(1.03);
}

















